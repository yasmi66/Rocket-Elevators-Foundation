<%= form_with(model: intervention, local: true) do |f| %>
  <% if intervention.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intervention.errors.count, "error") %> prohibited this intervention from being saved:</h2>
      <ul>
      <% intervention.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div id="Customer">
    <%= f.label :customer_id, "Please select customer." %>
    <%= f.collection_select :customer_id, Customer.order(:CompanyName), :id, :CompanyName, include_blank: true %>
  </div>

  <div id="Building">
    <%= f.label :BuildingID, "Please Select Building" %>
    <%= f.grouped_collection_select :BuildingID, Customer.order(:CompanyName), :buildings, :CompanyName, :id, :addressBuilding, include_blank: true %>
  </div>

  <div id="Battery">
    <%= f.label :BatteryID, "Please Select Battery" %>
    <%= f.grouped_collection_select :BatteryID, Building.order(:addressBuilding), :batteries, :addressBuilding, :id, :id, include_blank: true %>
  </div>

  <div id="Column">
    <%= f.label :ColumnID, "Please Select Column" %>
    <%= f.grouped_collection_select :ColumnID, Battery.order(:building_id), :columns, :id, :id, :id, include_blank: true %>
  </div>

  <div id="Elevator">
    <%= f.label :ElevatorID, "Please Select Elevator" %>
    <%= f.grouped_collection_select :ElevatorID, Column.order(:battery_id), :elevators, :id, :id, :id, include_blank: true %>
  </div>

  <div id="Employee">
    <%= f.label :EmployeeID %>
    <%= f.collection_select :EmployeeID, Employee.order(:id), :id, :id, :value => "None" %>
  </div>

  <div>
    <%= f.label :Result %>
    <%= f.text_field :Result, class:"textboxclass", :value => 'Incomplete' %>
  </div>

  <div>
    <%= f.label :Report %>
    <%= f.text_field :Report, class: "textboxclass" %>
  </div>

  <div >
    <%= f.label :Status %>
    <%= f.text_field :Status, class:"textboxclass", :value => 'Pending' %>
  </div>

  <div class="actions">
    <%= submit_tag "Submit", id:"submit", class:"btn btn-blue" %>
  </div>
<% end %>